<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Un Selected -->
    <item android:state_checked="false">
        <shape>
            <stroke android:color="@color/watermelon" android:width="1dp"/>
            <corners android:radius="15dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <!-- Selected -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="15dp"/>
                    <solid android:color="@color/watermelon"/>
                </shape>
            </item>
            <!-- image 영역-->
            <item android:drawable="@drawable/edittext_background_white_round"
                android:top="4dp"
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </layer-list>
    </item>
</selector>